<%= form_with(model: plant, local: true) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field singleline">
    <%= form.label :common_name, "Common Name:" %>
    <%= form.text_field :common_name %>
  </div>

  <div class="field singleline">
    <%= form.label :sc_name, "Scientific Name:" %>
    <%= form.text_field :sc_name %>
  </div>

  <div class="field singleline">
    <%= form.label :img_url, "Image URL:" %>
    <%= form.text_field :img_url %>
  </div>

  <div class="field multiline">
    <%= form.label :info, "Plant Information:" %>
    <%= form.text_area :info %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
